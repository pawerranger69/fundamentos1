#include <iostream>
#include <cmath> // Para sqrt

using namespace std;

int main() {
    double a, b, c;
    
    // Solicitar longitudes de los lados
    cout << "Introduce la longitud del primer lado: ";
    cin >> a;
    cout << "Introduce la longitud del segundo lado: ";
    cin >> b;
    cout << "Introduce la longitud del tercer lado: ";
    cin >> c;
    
    // Verificar si los lados forman un tri치ngulo v치lido
    if (a + b > c && a + c > b && b + c > a) {
        double s = (a + b + c) / 2.0;
        double area = sqrt(s * (s - a) * (s - b) * (s - c));
        cout << "El 치rea del tri치ngulo es: " << area << endl;
    }
    
    return 0;
}
