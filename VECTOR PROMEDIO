//MATIAS CASTRO
#include <iostream>
#define MAX 100
using namespace std;

void cargar(int vec[], int n);
int suma(int vec[], int n);

int main() {
    int vec[MAX], n;
    do {
        cout << "Ingresar el tamaÃ±o del vector: ";
        cin >> n;
    } while (n <= 0 || n > MAX);
    cargar(vec, n);
    cout << "La suma de los datos del vector es: " << suma(vec, n);
    return 0;
}

void cargar(int vec[], int n) {
    for (int i = 0; i < n; i++) {
        cout << "Ingresar valor para vec[" << i + 1 << "] :";
        cin >> vec[i];
    }
}

int suma(int vec[], int n) {
    int suma = 0;
    for (int i = 0; i < n; i++) {
        suma += vec[i];
    }
    return suma;
}
