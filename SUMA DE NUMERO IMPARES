#include <iostream>
using namespace std;
    int main(){
    int numero, sumatoria=0,contador=1;
    cout<<"Hola"<<endl;
    cout<<"Ingresa el valor maximo para hacer la sumatoria: ";
    cin>> numero;
    if(numero>1){
        while(contador<=numero){
            sumatoria=sumatoria+contador;
            contador=contador+2;
            }
        cout<<"Tu sumatoria es: "<<sumatoria;
        }
    else cout<<"Valor invÃ¡lido";
    return 0;
}
